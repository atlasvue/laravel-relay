{
    "name": "atlasvue/atlas-relay",
    "description": "Unified Laravel relay lifecycle for capturing, routing, and delivering payloads.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "illuminate/support": ">=10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.17",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^10.5",
        "nunomaduro/larastan": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "AtlasRelay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AtlasRelay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "extra": {
        "laravel": {
            "providers": [
                "AtlasRelay\\Providers\\AtlasRelayServiceProvider"
            ],
            "aliases": {
                "Relay": "AtlasRelay\\Facades\\Relay"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
